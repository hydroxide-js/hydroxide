{
  "name": "hydroxide-dom",
  "description": "Client side renderer for Hydroxide Framework",
  "version": "0.10.0",
  "author": "Manan Tank",
  "license": "MIT",
  "type": "module",
  "main": "dist/prod-cjs.js",
  "module": "dist/prod-esm.js",
  "types": "dist/types/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "browser": {
        "development": {
          "import": "./dist/dev-esm.js",
          "require": "./dist/dev-cjs.js"
        },
        "import": "./dist/prod-esm.js",
        "require": "./dist/prod-cjs.js"
      },
      "node": {
        "browser": {
          "development": {
            "import": "./dist/dev-esm.js",
            "require": "./dist/dev-cjs.js"
          },
          "import": "./dist/prod-esm.js",
          "require": "./dist/prod-cjs.js"
        }
      }
    }
  },
  "files": [
    "dist",
    "package.json",
    "readme.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:types": "tsc --project ./tsconfig-types.json  --emitDeclarationOnly",
    "build": "npm run clean && rollup -c && npm run build:types",
    "ts-check": "tsc --noEmit --project ./tsconfig-types.json",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "hydroxide": "latest",
    "hydroxide-jsx": "latest"
  },
  "peerDependencies": {
    "babel-plugin-hydroxide": "^1.2.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@testing-library/dom": "^8.11.3",
    "@types/jest": "^27.0.3",
    "babel-jest": "^28.1.1",
    "babel-plugin-hydroxide": "^1.2.2",
    "jest": "^27.4.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.76.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.7.4"
  }
}
