{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "jsx": "preserve",
    "jsxImportSource": "@nuejs/web-jsx-types",
    // for development, point directly to .ts files instead of bundles
    "paths": {
      "@nuejs/core": ["./packages/core/src/index"],
      "@nuejs/web": ["./packages/web/renderer/src/index"],
      "@nuejs/web-jsx-compiler": ["./packages/web/jsx-compiler/src/index"]
    }
  }
}
