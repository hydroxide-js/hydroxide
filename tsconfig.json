{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "jsx": "preserve",
    "jsxImportSource": "hydroxide-jsx",
    // for development, point directly to .ts files instead of bundles
    "paths": {
      "hydroxide": ["./packages/core/src/index"],
      "hydroxide-dom": ["./packages/web/renderer/src/index"],
      "babel-plugin-hydroxide": ["./packages/web/jsx-compiler/src/index"]
    }
  }
}
